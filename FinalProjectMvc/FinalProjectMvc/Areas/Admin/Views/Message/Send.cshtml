@using FinalProjectMvc.Models
@model List<AppUser>

<form asp-action="Send" method="post">
    <select name="receiverId" class="form-control">
        @foreach (var user in Model)
        {
            <option value="@user.Id">@user.FullName (@user.UserName)</option>
        }
    </select>
    <textarea name="content" class="form-control mt-2" placeholder="Mesajınızı yazın..."></textarea>
    <button type="submit" class="btn btn-primary mt-2">Göndər</button>
</form>
