@model ContactMessageReplyVM

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header" style="background-color: #6b4f3b; color: white;">
                    <h4 class="mb-0"><i class="fas fa-reply"></i> Reply to Message</h4>
                </div>
                <div class="card-body">
                    <div class="bg-light border-start border-3" style="border-color: #6b4f3b; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
                        <h6 class="text-muted mb-2">📨 <strong>Original Message</strong></h6>
                        <p class="mb-1"><strong>From:</strong> @Model.FirstName @Model.LastName (<a href="mailto:@Model.Email">@Model.Email</a>)</p>
                        <p class="mb-0"><strong>Message:</strong> @Model.Message</p>
                    </div>

                    <form asp-action="Reply" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="FirstName" type="hidden" />
                        <input asp-for="LastName" type="hidden" />
                        <input asp-for="Email" type="hidden" />
                        <input asp-for="Message" type="hidden" />

                        <div class="mb-4">
                            <label asp-for="Reply" class="form-label fw-bold">Your Reply:</label>
                            <textarea asp-for="Reply" class="form-control" rows="6" placeholder="Write your reply here..." required></textarea>
                            <span asp-validation-for="Reply" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn" style="background-color: #6b4f3b; color: white;">
                                <i class="fas fa-paper-plane"></i> Send Reply
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

