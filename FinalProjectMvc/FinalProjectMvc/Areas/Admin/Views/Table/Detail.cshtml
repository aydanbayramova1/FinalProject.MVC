@using FinalProjectMvc.ViewModels.Admin.Table
@model TableDetailVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white p-4 rounded shadow-sm border text-center">
                <h2 class="mb-4" style="font-family: 'Georgia', serif; color: #6b4f3b;">🍽️ Table Details</h2>

                <div class="text-start mb-3">
                    <p><strong>Table Number:</strong> @Model.Number</p>
                    <p><strong>Location:</strong> @Model.Location</p>
                    <p><strong>Capacity:</strong> @Model.Capacity person(s)</p>
                </div>

                @if (Model.Reservations != null && Model.Reservations.Any())
                {
                    <div class="text-start">
                        <h5 class="mb-3" style="color: #5c3d2e;">Reservations:</h5>
                        <ul class="list-group">
                            @foreach (var reservation in Model.Reservations)
                            {
                                <li class="list-group-item">
                                    <strong>@reservation.FullName</strong> - @reservation.Date.ToString("dd MMM yyyy, HH:mm")
                                </li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-3 text-start">
                        This table has no reservations yet.
                    </div>
                }

                <a asp-action="Index"
                   class="btn mt-4"
                   style="color: #5c3d2e; border: 1px solid #5c3d2e; background-color: white;"
                   onmouseover="this.style.backgroundColor='#5c3d2e'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='white'; this.style.color='#5c3d2e';">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
