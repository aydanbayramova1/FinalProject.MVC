@model FinalProjectMvc.ViewModels.Admin.Reservation.ReservationDetailVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white p-4 rounded shadow-sm border text-center">
                <h2 class="mb-4" style="font-family: 'Georgia', serif; color: #6b4f3b;">📋 Reservation Details</h2>

                <div class="text-start mb-3">
                    <p><strong>👤 Full Name:</strong> @Model.Fullname</p>
                    <p><strong>📧 Email:</strong> @Model.Email</p>
                    <p><strong>📞 Phone:</strong> @Model.Phone</p>
                    <p><strong>📅 Date:</strong> @Model.Date.ToString("dd MMM yyyy")</p>
                    <p><strong>⏰ Time:</strong> @Model.TimeFrom.ToString(@"hh\:mm") - @Model.TimeTo.ToString(@"hh\:mm")</p>
                    <p><strong>👥 Guest Count:</strong> @Model.GuestCount</p>
                    <p><strong>🪑 Table Number:</strong> @Model.TableNumber</p>
                    <p><strong>📍 Table Location:</strong> @Model.TableLocation</p>
                    <p><strong>💺 Table Capacity:</strong> @Model.TableCapacity</p>
                    <p><strong>📅 Created At:</strong> @Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</p>
                </div>

                <div class="text-start mb-3">
                    <p>
                        <strong>Status:</strong>
                        @switch (Model.Status)
                        {
                            case FinalProjectMvc.Helpers.Enums.ReservationStatus.Confirmed:
                                <span class="badge bg-success">Confirmed</span>
                                ;
                                break;
                            case FinalProjectMvc.Helpers.Enums.ReservationStatus.Pending:
                                <span class="badge bg-danger">Pending</span>
                                ;
                                break;
                            case FinalProjectMvc.Helpers.Enums.ReservationStatus.Rejected:
                                <span class="badge bg-danger">Rejected</span>
                                ;
                                break;
                            default:
                                <span class="badge bg-warning text-dark">Cancelled</span>
                                ;
                                break;
                        }
                    </p>
                </div>

                <a asp-action="Index"
                   class="btn mt-4"
                   style="color: #5c3d2e; border: 1px solid #5c3d2e; background-color: white;"
                   onmouseover="this.style.backgroundColor='#5c3d2e'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='white'; this.style.color='#5c3d2e';">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
