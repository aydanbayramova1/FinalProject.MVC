@using FinalProjectMvc.ViewModels.Admin.Reservation
@model ReservationDetailVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white p-4 rounded shadow-sm border text-center">
                <h2 class="mb-4" style="font-family: 'Georgia', serif; color: #6b4f3b;">📋 Reservation Details</h2>

                <div class="text-start mb-3">
                    <p><strong>👤 Full Name:</strong> @Model.FullName</p>
                    <p><strong>📧 Email:</strong> @Model.Email</p>
                    <p><strong>📞 Phone:</strong> @Model.PhoneNumber</p>
                    <p><strong>📅 Date:</strong> @Model.Date.ToString("dd MMM yyyy")</p>
                    <p><strong>⏰ Time:</strong> @Model.Time.ToString(@"hh\:mm")</p>
                    <p><strong>👥 Guest Count:</strong> @Model.GuestCount</p>
                    <p><strong>📍 Table Location:</strong> @Model.TableLocation</p>
                    <p><strong>🪑 Table Number:</strong> @Model.TableNumber</p>
                </div>

                <div class="text-start mb-3">
                    <p>
                        <strong>Status:</strong>
                        @if (Model.IsRejected)
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else if (Model.IsConfirmed)
                        {
                            <span class="badge bg-success">Confirmed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </p>
                    <p>
                        <strong>Payment:</strong>
                        @if (Model.IsPaid)
                        {
                            <span class="badge bg-success">Paid</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Not Paid</span>
                        }
                    </p>
                    <p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("F2")</p>
                </div>

                @if (Model.OrderItems != null && Model.OrderItems.Any())
                {
                    <div class="text-start mt-4">
                        <h5 style="color: #5c3d2e;">🍽️ Ordered Items:</h5>
                        <ul class="list-group">
                            @foreach (var item in Model.OrderItems)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <strong>@item.ProductName</strong> (@item.SizeName) x @item.Quantity
                                    </span>
                                    <span>$@item.UnitPrice.ToString("F2")</span>
                                </li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-3 text-start">
                        No items have been ordered.
                    </div>
                }

                <a asp-action="Index"
                   class="btn mt-4"
                   style="color: #5c3d2e; border: 1px solid #5c3d2e; background-color: white;"
                   onmouseover="this.style.backgroundColor='#5c3d2e'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='white'; this.style.color='#5c3d2e';">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
