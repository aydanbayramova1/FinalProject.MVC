@model IEnumerable<FinalProjectMvc.ViewModels.Admin.Size.SizeVM>

<div style="position: relative;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="bg-light border rounded shadow-sm p-4" style="position: relative; z-index: 1;">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="mb-0" style="font-family: 'Georgia', serif; color: #6b4f3b;">📏 Sizes</h2>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin"))
                        {
                            @if (Model.Count() < 3)
                            {
                                <a asp-action="Create" class="btn btn-outline-brown">
                                    <i class="fa fa-plus mr-1"></i> Add New Size
                                </a>
                            }
                        }

                       
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered text-center align-middle bg-white">
                            <thead>
                                <tr>
                                    <th style="background-color: #5c3d2e; color: #fff;">Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-warning text-center mt-4" role="alert">
                            No size has been added yet.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
