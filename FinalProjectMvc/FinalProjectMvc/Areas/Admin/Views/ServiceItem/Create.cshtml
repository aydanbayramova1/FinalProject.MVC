@model ServiceItemCreateVM

@{
    ViewData["Title"] = "Add New Service Item";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white p-4 rounded shadow-sm border">
                <h2 class="mb-4 text-center" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕ Add New Service Item</h2>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Subtitle" class="form-label">Subtitle</label>
                        <textarea asp-for="Subtitle" class="form-control" rows="3" placeholder="Enter subtitle/description"></textarea>
                        <span asp-validation-for="Subtitle" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Image" class="form-label">Icon</label>
                        <input asp-for="Image" type="file" class="form-control" accept=".ico,.svg,.png" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="ServiceId" />

                    <div class="d-flex justify-content-between">
                        <button type="submit"
                                class="btn btn-outline-primary"
                                style="color:brown; border: 1px solid brown; background-color: white;"
                                onmouseover="this.style.backgroundColor='brown'; this.style.color='white';"
                                onmouseout="this.style.backgroundColor='white'; this.style.color='brown';">
                            Submit
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
