@model IEnumerable<ApproachItemVM>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="bg-light border rounded shadow-sm p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕ Approach Items</h2>
                    <a asp-action="Create" asp-route-approachId="@ViewBag.ApproachId" class="btn btn-outline-brown">
                        <i class="fa fa-plus mr-1"></i> Add New Item
                    </a>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered text-center align-middle bg-white">
                        <thead class="thead-dark">
                            <tr>
                                <th>Icon</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><i class="@item.IconPath fa-2x"></i></td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="fa-solid fa-circle-info"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark btn-sm">
                                            <i class="fa-solid fa-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
                {
                    <div class="alert alert-warning text-center mt-4">No items added yet.</div>
                }
            </div>
        </div>
    </div>
</div>
