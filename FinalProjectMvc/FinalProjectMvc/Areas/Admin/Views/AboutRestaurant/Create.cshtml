@model AboutRestaurantCreateVM

@{
    ViewData["Title"] = "Add About Restaurant";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="bg-white p-4 rounded shadow-sm border">
                <h2 class="mb-4 text-center" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕ Add About Restaurant</h2>

                <form asp-area="Admin" asp-controller="AboutRestaurant" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SubTitle" class="form-label"></label>
                        <input asp-for="SubTitle" class="form-control" />
                        <span asp-validation-for="SubTitle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ExperienceDescription" class="form-label"></label>
                        <textarea asp-for="ExperienceDescription" class="form-control"></textarea>
                        <span asp-validation-for="ExperienceDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="QualityMessage" class="form-label"></label>
                        <textarea asp-for="QualityMessage" class="form-control"></textarea>
                        <span asp-validation-for="QualityMessage" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AtmosphereNote" class="form-label"></label>
                        <textarea asp-for="AtmosphereNote" class="form-control"></textarea>
                        <span asp-validation-for="AtmosphereNote" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HeadBaristaName" class="form-label"></label>
                        <input asp-for="HeadBaristaName" class="form-control" />
                        <span asp-validation-for="HeadBaristaName" class="text-danger"></span>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <label asp-for="TimingTitle" class="form-label"></label>
                        <input asp-for="TimingTitle" class="form-control" />
                        <span asp-validation-for="TimingTitle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TimingSubtitle" class="form-label"></label>
                        <input asp-for="TimingSubtitle" class="form-control" />
                        <span asp-validation-for="TimingSubtitle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TimingDescription" class="form-label"></label>
                        <input asp-for="TimingDescription" class="form-control" />
                        <span asp-validation-for="TimingDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WeekdayTime" class="form-label"></label>
                        <input asp-for="WeekdayTime" class="form-control" />
                        <span asp-validation-for="WeekdayTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WeekendTime" class="form-label"></label>
                        <input asp-for="WeekendTime" class="form-control" />
                        <span asp-validation-for="WeekendTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HappyHour" class="form-label"></label>
                        <input asp-for="HappyHour" class="form-control" />
                        <span asp-validation-for="HappyHour" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HolidayStatus" class="form-label"></label>
                        <input asp-for="HolidayStatus" class="form-control" />
                        <span asp-validation-for="HolidayStatus" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HolidayNote" class="form-label"></label>
                        <textarea asp-for="HolidayNote" class="form-control"></textarea>
                        <span asp-validation-for="HolidayNote" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Photo" class="form-label"></label>
                        <input asp-for="Photo" type="file" class="form-control" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit"
                                class="btn btn-outline-primary"
                                style="color:brown; border: 1px solid brown; background-color: white;"
                                onmouseover="this.style.backgroundColor='brown'; this.style.color='white';"
                                onmouseout="this.style.backgroundColor='white'; this.style.color='brown';">
                            Submit
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
