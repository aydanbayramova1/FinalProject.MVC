@model AboutRestaurantDetailVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-11">
            <div class="bg-light border rounded shadow-sm p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕ About Restaurant Details</h2>
                    <a asp-action="Edit" class="btn btn-outline-dark">
                        <i class="fa fa-edit mr-1"></i> Edit
                    </a>
                </div>

                <div class="row">
                    <div class="col-md-4 text-center mb-4">
                        <img src="~/img/@Model.Image" alt="About Restaurant Image" class="img-fluid rounded shadow-sm" style="max-height: 300px;" />

                    </div>
                    <div class="col-md-8">
                        <h4 class="text-brown mb-2">@Model.Title</h4>
                        <h5 class="text-muted mb-3">@Model.SubTitle</h5>

                        <p><strong>Experience:</strong> @Model.ExperienceDescription</p>
                        <p><strong>Quality Message:</strong> @Model.QualityMessage</p>
                        <p><strong>Atmosphere Note:</strong> @Model.AtmosphereNote</p>

                        <hr />

                        <p><strong>Head Barista:</strong> @Model.HeadBaristaName</p>

                        <h5 class="mt-4 mb-2 text-brown">🕒 Timing Info</h5>
                        <p><strong>Timing Title:</strong> @Model.TimingTitle</p>
                        <p><strong>Subtitle:</strong> @Model.TimingSubtitle</p>
                        <p><strong>Description:</strong> @Model.TimingDescription</p>
                        <p><strong>Weekdays:</strong> @Model.WeekdayTime</p>
                        <p><strong>Weekends:</strong> @Model.WeekendTime</p>
                        <p><strong>Happy Hour:</strong> @Model.HappyHour</p>

                        <hr />

                        <p><strong>Holiday Status:</strong> @Model.HolidayStatus</p>
                        <p><strong>Holiday Note:</strong> @Model.HolidayNote</p>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-brown {
        color: #6b4f3b;
    }
</style>
