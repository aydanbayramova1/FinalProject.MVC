@model SettingVM

<div class="container py-5">
    <h2 class="mb-4" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕Setting Details</h2>

    <div class="card p-4 shadow-sm bg-light rounded">
        <div class="row mb-3">
            <div class="col-md-4 text-center">
                <label><strong>Header Logo</strong></label><br />
                <img src="@Model.HeaderLogo"
                     alt="Header Logo"
                     class="img-thumbnail"
                     style="max-width: 150px; border-radius: 10px;"
                     onerror="this.onerror=null;this.src='@Url.Content("~/assets/images/default-logo.png")'" />
            </div>
            <div class="col-md-4 text-center">
                <label><strong>Footer Logo</strong></label><br />
                <img src="@Model.FooterLogo"
                     alt="Footer Logo"
                     class="img-thumbnail"
                     style="max-width: 150px; border-radius: 10px;"
                     onerror="this.onerror=null;this.src='@Url.Content("~/assets/images/default-logo.png")'" />
            </div>
            <div class="col-md-4 text-center">
                <label><strong>Background Image</strong></label><br />
                <img src="@Model.BackgroundImage"
                     alt="Background Image"
                     class="img-thumbnail"
                     style="max-width: 150px; border-radius: 10px;"
                     onerror="this.onerror=null;this.src='@Url.Content("~/assets/images/default-background.png")'" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Address:</strong> @Model.Address</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @Model.Phone</p>
            </div>
            <div class="col-md-6">
                <p><strong>Everyday Working Hours:</strong> @Model.EverydayWorkingHours</p>
                <p><strong>Kitchen Close Time:</strong> @Model.KitchenCloseTime</p>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin"))
        {
            <a asp-action="Edit" class="btn btn-dark">
                <i class="fa fa-pencil-alt"></i> Edit Settings
            </a>
        }
        
      
    </div>
</div>
