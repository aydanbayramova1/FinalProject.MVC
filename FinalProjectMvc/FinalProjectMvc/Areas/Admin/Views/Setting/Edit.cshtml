@model FinalProjectMvc.ViewModels.Admin.Setting.SettingEditVM

@{
    ViewData["Title"] = "Edit Settings";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white p-4 rounded shadow-sm border">
                <h2 class="mb-4 text-center" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕ Edit Settings</h2>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="HeaderLogo" />
                    <input type="hidden" asp-for="FooterLogo" />
                    <input type="hidden" asp-for="BackgroundImage" />

                    <div class="form-group mb-3">
                        <label class="form-label">Current Header Logo</label><br />
                        @if (!string.IsNullOrEmpty(Model.HeaderLogo))
                        {
                            <img src="@Model.HeaderLogo" alt="Header Logo" class="img-thumbnail mb-2" style="max-height: 100px;" />
                        }
                        else
                        {
                            <p class="text-muted">No Header Logo uploaded.</p>
                        }
                        <label asp-for="HeaderLogoFile" class="form-label">New Header Logo (optional)</label>
                        <input asp-for="HeaderLogoFile" type="file" accept="image/*" class="form-control" />
                        <span asp-validation-for="HeaderLogoFile" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Current Footer Logo</label><br />
                        @if (!string.IsNullOrEmpty(Model.FooterLogo))
                        {
                            <img src="@Model.FooterLogo" alt="Footer Logo" class="img-thumbnail mb-2" style="max-height: 100px;" />
                        }
                        else
                        {
                            <p class="text-muted">No Footer Logo uploaded.</p>
                        }
                        <label asp-for="FooterLogoFile" class="form-label">New Footer Logo (optional)</label>
                        <input asp-for="FooterLogoFile" type="file" accept="image/*" class="form-control" />
                        <span asp-validation-for="FooterLogoFile" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Current Background Image</label><br />
                        @if (!string.IsNullOrEmpty(Model.BackgroundImage))
                        {
                            <img src="@Model.BackgroundImage" alt="Background" class="img-thumbnail mb-2" style="max-height: 120px;" />
                        }
                        else
                        {
                            <p class="text-muted">No Background Image uploaded.</p>
                        }
                        <label asp-for="BackgroundImageFile" class="form-label">New Background Image (optional)</label>
                        <input asp-for="BackgroundImageFile" type="file" accept="image/*" class="form-control" />
                        <span asp-validation-for="BackgroundImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input asp-for="Address" class="form-control" placeholder="Enter address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Phone" class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EverydayWorkingHours" class="form-label">Everyday Working Hours</label>
                        <input asp-for="EverydayWorkingHours" class="form-control" placeholder="e.g. 09:00 - 22:00" />
                        <span asp-validation-for="EverydayWorkingHours" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="KitchenCloseTime" class="form-label">Kitchen Close Time</label>
                        <input asp-for="KitchenCloseTime" class="form-control" placeholder="e.g. 21:30" />
                        <span asp-validation-for="KitchenCloseTime" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit"
                                class="btn btn-outline-primary"
                                style="color:brown; border: 1px solid brown; background-color: white;"
                                onmouseover="this.style.backgroundColor='brown'; this.style.color='white';"
                                onmouseout="this.style.backgroundColor='white'; this.style.color='brown';">
                            Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
