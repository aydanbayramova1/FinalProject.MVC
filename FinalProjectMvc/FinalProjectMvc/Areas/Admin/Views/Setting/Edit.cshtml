@model FinalProjectMvc.ViewModels.Admin.Setting.SettingEditVM

@{
    ViewData["Title"] = "Edit Setting";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white p-4 rounded shadow-sm border">
                <h2 class="mb-4 text-center" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕ Edit Setting</h2>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <!-- Header Logo -->
                    <div class="form-group mb-3">
                        <label class="form-label">Current Header Logo</label>
                        <div class="mb-2">
                            @if (!string.IsNullOrEmpty(Model.HeaderLogo))
                            {
                                <img src="@Model.HeaderLogo" alt="Header Logo" class="img-fluid rounded" style="max-height: 80px;" />
                            }
                            else
                            {
                                <p class="text-muted">No Header Logo uploaded.</p>
                            }
                        </div>
                        <label asp-for="HeaderLogoFile" class="form-label">Upload New Header Logo</label>
                        <input asp-for="HeaderLogoFile" type="file" class="form-control" />
                        <span class="text-danger" asp-validation-for="HeaderLogoFile"></span>
                    </div>

                    <!-- Footer Logo -->
                    <div class="form-group mb-3">
                        <label class="form-label">Current Footer Logo</label>
                        <div class="mb-2">
                            @if (!string.IsNullOrEmpty(Model.FooterLogo))
                            {
                                <img src="@Model.FooterLogo" alt="Footer Logo" class="img-fluid rounded" style="max-height: 80px;" />
                            }
                            else
                            {
                                <p class="text-muted">No Footer Logo uploaded.</p>
                            }
                        </div>
                        <label asp-for="FooterLogoFile" class="form-label">Upload New Footer Logo</label>
                        <input asp-for="FooterLogoFile" type="file" class="form-control" />
                        <span class="text-danger" asp-validation-for="FooterLogoFile"></span>
                    </div>

                    <!-- Background Image -->
                    <div class="form-group mb-3">
                        <label class="form-label">Current Background Image</label>
                        <div class="mb-2">
                            @if (!string.IsNullOrEmpty(Model.BackgroundImage))
                            {
                                <img src="@Model.BackgroundImage" alt="Background Image" class="img-fluid rounded" style="max-height: 100px;" />
                            }
                            else
                            {
                                <p class="text-muted">No Background Image uploaded.</p>
                            }
                        </div>
                        <label asp-for="BackgroundImageFile" class="form-label">Upload New Background Image</label>
                        <input asp-for="BackgroundImageFile" type="file" class="form-control" />
                        <span class="text-danger" asp-validation-for="BackgroundImageFile"></span>
                    </div>

                    <!-- Address -->
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input asp-for="Address" class="form-control" placeholder="Enter address" />
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <!-- Phone -->
                    <div class="form-group mb-3">
                        <label asp-for="Phone" class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                        <span class="text-danger" asp-validation-for="Phone"></span>
                    </div>

                    <!-- Everyday Working Hours -->
                    <div class="form-group mb-3">
                        <label asp-for="EverydayWorkingHours" class="form-label">Everyday Working Hours</label>
                        <input asp-for="EverydayWorkingHours" class="form-control" placeholder="e.g., 09:00 - 22:00" />
                        <span class="text-danger" asp-validation-for="EverydayWorkingHours"></span>
                    </div>

                    <!-- Kitchen Close Time -->
                    <div class="form-group mb-4">
                        <label asp-for="KitchenCloseTime" class="form-label">Kitchen Close Time</label>
                        <input asp-for="KitchenCloseTime" class="form-control" placeholder="e.g., 21:30" />
                        <span class="text-danger" asp-validation-for="KitchenCloseTime"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit"
                                class="btn btn-outline-primary"
                                style="color:brown; border: 1px solid brown; background-color: white;"
                                onmouseover="this.style.backgroundColor='brown'; this.style.color='white';"
                                onmouseout="this.style.backgroundColor='white'; this.style.color='brown';">
                            Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
