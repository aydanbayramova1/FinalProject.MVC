 @model FinalProjectMvc.ViewModels.Admin.IntroCounter.IntroCounterVM

@{
    ViewData["Title"] = "Intro Counter Detail";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white p-4 rounded shadow-sm border text-center">
                <h2 class="mb-4" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕Intro Counter Details</h2>

                <img src="~/@Model.IconPath" alt="Icon" class="img-fluid rounded mb-4" style="max-width: 100px; height: auto;" />

                <div class="text-start">
                    <p><strong>Count:</strong> @Model.Count</p>
                    <p><strong>Suffix:</strong> @Model.Suffix</p>
                    <p><strong>Description:</strong></p>
                    <p class="text-muted">@Model.Description</p>
                </div>

                <a asp-action="Index"
                   class="btn mt-3"
                   style="color: #5c3d2e; border: 1px solid #5c3d2e; background-color: white;"
                   onmouseover="this.style.backgroundColor='#5c3d2e'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='white'; this.style.color='#5c3d2e';">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
