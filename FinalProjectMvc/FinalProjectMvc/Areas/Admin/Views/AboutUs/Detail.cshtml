@model AboutUsDetailVM

@{
    ViewData["Title"] = "About Us Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="bg-white p-5 rounded-4 shadow-lg border">
                <h2 class="mb-4 text-center" style="font-family: 'Georgia', serif; color: #5c3d2e;">
                    ☕ About Us Details
                </h2>

                <div class="mb-4 text-center">
                    <h5 class="text-muted">Title</h5>
                    <h4>@Model.Title</h4>

                    <h5 class="text-muted mt-3">Subtitle</h5>
                    <h5>@Model.Subtitle</h5>

                    <h5 class="text-muted mt-3">Description</h5>
                    <p>@Model.Description</p>
                </div>

                <div class="row justify-content-center mb-5">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="col-md-6 text-center mb-3">
                            <p class="text-muted">Image</p>
                            <img src="~/uploads/images/@Model.ImageUrl"
                                 alt="About Us Image"
                                 class="img-fluid rounded-3 shadow"
                                 style="max-height: 250px; object-fit: contain;" />
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.VideoUrl))
                    {
                        <div class="col-md-6 text-center mb-3">
                            <p class="text-muted">Video</p>
                            <div class="rounded-3 overflow-hidden shadow-sm" style="max-height: 250px;">
                                <video controls style="max-height: 250px; width: 100%; object-fit: contain;">
                                    <source src="~/uploads/videos/@Model.VideoUrl" type="video/mp4" />
                                    Your browser does not support the video tag.
                                </video>
                            </div>
                        </div>
                    }
                </div>

                <div class="mb-5">
                    <h4 class="mb-3" style="color: #5c3d2e;">🕒 Opening Hours</h4>
                    <p><strong>@Model.OpeningTimeTitle</strong></p>
                    @if (Model.OpeningHours != null && Model.OpeningHours.Any())
                    {
                        <ul class="list-group">
                            @foreach (var hour in Model.OpeningHours)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@hour.DayRange</span>
                                    <span>@hour.TimeRange</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            No opening hours available.
                        </div>
                    }
                </div>

                <div class="mb-5">
                    <h4 class="mb-3" style="color: #5c3d2e;">🔸 About Us Items</h4>
                    @if (Model.AboutUsItems != null && Model.AboutUsItems.Any())
                    {
                        <div class="row">
                            @foreach (var item in Model.AboutUsItems)
                            {
                                <div class="col-md-6 mb-4">
                                    <div class="card shadow-sm h-100">
                                        <div class="card-body">
                                            <h5 class="card-title">@item.Title</h5>
                                            <p class="card-text">@item.Description</p>
                                            @if (!string.IsNullOrEmpty(item.IconPath))
                                            {
                                                <img src="~/@item.IconPath"
                                                     alt="Icon"
                                                     class="mt-2"
                                                     style="height: 40px;" />
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            No About Us items available.
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    <a asp-action="Index"
                       class="btn"
                       style="color: #5c3d2e; border: 1px solid #5c3d2e; background-color: white; padding: 8px 20px; border-radius: 8px;"
                       onmouseover="this.style.backgroundColor='#5c3d2e'; this.style.color='white';"
                       onmouseout="this.style.backgroundColor='white'; this.style.color='#5c3d2e';">
                        ← Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
