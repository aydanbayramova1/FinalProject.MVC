@model FinalProjectMvc.ViewModels.Admin.MenuProduct.MenuProductDetailVM


@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="bg-white p-4 rounded shadow-sm border text-center">
                <h2 class="mb-4" style="font-family: 'Georgia', serif; color: #6b4f3b;">🍽️ Product Details</h2>

                <div class="text-start">
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Ingredients:</strong> @Model.Ingredients</p>
                    <p><strong>Price:</strong> $@Model.Price</p>
                    <p><strong>Category:</strong> @Model.CategoryName</p>
                    <p><strong>Category Type:</strong> @Model.CategoryTypeName</p>

                    @if (Model.Sizes != null && Model.Sizes.Any())
                    {
                        <p><strong>Sizes:</strong> @string.Join(", ", Model.Sizes)</p>
                    }
                </div>

                <a asp-action="Index"
                   class="btn mt-4"
                   style="color: #5c3d2e; border: 1px solid #5c3d2e; background-color: white;"
                   onmouseover="this.style.backgroundColor='#5c3d2e'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='white'; this.style.color='#5c3d2e';">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
