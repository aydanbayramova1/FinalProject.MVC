@model IEnumerable<FinalProjectMvc.ViewModels.Admin.CategoryType.CategoryTypeVM>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="bg-light border rounded shadow-sm p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0" style="font-family: 'Georgia', serif; color: #6b4f3b;">Category Types</h2>

                    @if (Model.Count() < 2)
                    {
                        <a asp-action="Create" class="btn btn-outline-brown">
                            <i class="fa fa-plus mr-1"></i> Add New Category Type
                        </a>
                    }
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered text-center align-middle bg-white">
                        <thead>
                            <tr style="background-color: #5c3d2e; color: white;">
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
                {
                    <div class="alert alert-warning text-center mt-4">
                        No category types have been added yet.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
