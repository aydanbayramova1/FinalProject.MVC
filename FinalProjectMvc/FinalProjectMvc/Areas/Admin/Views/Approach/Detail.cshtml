@model ApproachDetailVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white p-4 rounded shadow-sm border text-center">
                <h2 class="mb-4" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕ Approach Details</h2>

                <img src="~/@Model.Image" alt="Approach Image"
                     class="img-fluid rounded mb-4"
                     style="max-width: 100%; height: auto; max-height: 300px;" />

                <div class="text-start">
                    <p><strong>Title:</strong> @Model.Title</p>
                    <p><strong>Subtitle:</strong> @Model.SubTitle</p>
                </div>

                <hr />

                <h4 class="text-start mt-4" style="color: #6b4f3b;">Approach Items</h4>
                @if (Model.Items != null && Model.Items.Any())
                {
                    <div class="text-start">
                        @foreach (var item in Model.Items)
                        {
                            <div class="border p-3 mb-3 rounded bg-light">
                                <div class="d-flex align-items-center mb-2">
                                    <img src="~/uploads/approachicons/@item.IconImg"
                                         alt="@item.Title"
                                         style="width: 40px; height: 40px; object-fit: contain; margin-right: 10px;" />
                                    <strong>@item.Title</strong>
                                </div>
                                <p>@item.Description</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No approach items found.</p>
                }

                <a asp-action="Index"
                   class="btn mt-4"
                   style="color: #6b4f3b; border: 1px solid #6b4f3b; background-color: white;"
                   onmouseover="this.style.backgroundColor='#6b4f3b'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='white'; this.style.color='#6b4f3b';">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
