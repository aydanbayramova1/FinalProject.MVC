@model ApproachDetailVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white p-4 rounded shadow-sm border text-center">
                <h2 class="mb-4" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕ Approach Details</h2>

                <img src="~/uploads/approach/@Model.Image" alt="Approach Image"
                     class="img-fluid rounded mb-4"
                     style="max-width: 100%; height: auto; max-height: 300px;" />

                <div class="text-start">
                    <p><strong>Title:</strong> @Model.Title</p>
                    <p><strong>Subtitle:</strong> @Model.SubTitle</p>
                </div>

                <h4 class="mt-4">Approach Items</h4>
                <ul class="list-group mt-2">
                    @foreach (var item in Model.Items)
                    {
                        <li class="list-group-item">
                            <strong>@item.Title:</strong> @item.Description
                        </li>
                    }
                </ul>

                <a asp-action="Index"
                   class="btn mt-3"
                   style="color: #5c3d2e; border: 1px solid #5c3d2e; background-color: white;"
                   onmouseover="this.style.backgroundColor='#5c3d2e'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='white'; this.style.color='#5c3d2e';">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
