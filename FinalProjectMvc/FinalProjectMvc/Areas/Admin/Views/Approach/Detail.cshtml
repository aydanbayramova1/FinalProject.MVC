@model ApproachDetailVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-8">
            <div class="bg-white p-4 rounded shadow-sm border">
                <h2 class="mb-4 text-center" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕ Approach Details</h2>

                <div class="text-center mb-4">
                    <img src="~/uploads/approach/@Model.Image" alt="Approach Image" class="img-fluid rounded" style="max-height: 300px;" />
                </div>

                <h3 class="text-center">@Model.Title</h3>
                <h5 class="text-center text-muted mb-4">@Model.SubTitle</h5>

                <hr />

                <h4>Items (@Model.Items?.Count ?? 0)</h4>
                @if (Model.Items != null && Model.Items.Any())
                {
                    <ul class="list-group">
                        @foreach (var item in Model.Items)
                        {
                            <li class="list-group-item d-flex align-items-center">
                                <img src="~/uploads/icons/@item.IconPath" alt="Icon" style="width:30px; height:30px; margin-right:15px;" />
                                <div>
                                    <strong>@item.Title</strong><br />
                                    <small>@item.Description</small>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No items found for this approach.</p>
                }

                <div class="mt-4 text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark me-2">Edit Approach</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
