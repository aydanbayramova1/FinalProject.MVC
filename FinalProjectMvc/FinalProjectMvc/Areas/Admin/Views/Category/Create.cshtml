@model FinalProjectMvc.ViewModels.Admin.Category.CategoryCreateVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white p-4 rounded shadow-sm border">
                <h2 class="mb-4 text-center" style="font-family: 'Georgia', serif; color: #6b4f3b;">📁 Add New Category</h2>

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                        {
                            <span>@error.ErrorMessage</span>

                            <br />
                        }
                    </div>
                }

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ImageFile" class="form-label">Image</label>
                        <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" />
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="CategoryTypeId" class="form-label">Category Type</label>
                        <select asp-for="CategoryTypeId" asp-items="@(new SelectList(Model.CategoryTypes, "Id", "Name"))" class="form-control">
                            <option disabled selected>-- Select Category Type --</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryTypeId"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit"
                                class="btn btn-outline-primary"
                                style="color:brown; border: 1px solid brown; background-color: white;"
                                onmouseover="this.style.backgroundColor='brown'; this.style.color='white';"
                                onmouseout="this.style.backgroundColor='white'; this.style.color='brown';">
                            Submit
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
