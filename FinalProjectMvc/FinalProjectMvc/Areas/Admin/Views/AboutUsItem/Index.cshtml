@model List<FinalProjectMvc.ViewModels.Admin.AboutUsItem.AboutUsItemVM>

@{
    ViewData["Title"] = "About Us Items";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="mb-0" style="font-family: 'Georgia', serif; color: #6b4f3b;">📋 About Us Items</h2>
                        <a asp-action="Create" class="btn btn-outline-brown">
                            <i class="fa fa-plus me-1"></i> Add Item
                        </a>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-hover text-center align-middle bg-white shadow-sm">
                            <thead class="text-white" style="background-color: #5c3d2e;">
                                <tr>
                                    <th>Icon</th>
                                    <th>Title</th>
                                    <th>Subtitle</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.IconUrl))
                                            {
                                                <img src="~/@item.IconUrl" alt="Icon"
                                                     class="img-thumbnail" style="max-width: 80px;" />
                                            }
                                            else
                                            {
                                                <span class="text-muted">No icon</span>
                                            }
                                        </td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark btn-sm">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash-alt"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center mt-4" role="alert">
                            <strong>No About Us Items found.</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
