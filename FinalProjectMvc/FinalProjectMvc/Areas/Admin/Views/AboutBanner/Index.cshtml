@model IEnumerable<FinalProjectMvc.ViewModels.Admin.AboutBanner.AboutBannerVM>

@{
    ViewData["Title"] = "About Banner List";
}

<form id="antiForgeryForm" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="bg-light border rounded shadow-sm p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0" style="font-family: 'Georgia', serif; color: #6b4f3b;">☕ About Banner List</h2>
                    @if (!Model.Any())
                    {
                        <a asp-area="Admin" asp-controller="AboutBanner" asp-action="Create" class="btn btn-outline-brown" id="addNewBannerLink" style="display: inline-block;">
                            <i class="fa fa-plus mr-1"></i> Add New Banner
                        </a>
                    }
                    else
                    {
                        <a asp-area="Admin" asp-controller="AboutBanner" asp-action="Create" class="btn btn-outline-brown" id="addNewBannerLink" style="display: none;">
                            <i class="fa fa-plus mr-1"></i> Add New Banner
                        </a>
                    }
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered text-center align-middle bg-white" id="bannerTable">
                        <thead class="thead-dark">
                            <tr>
                                <th style="background-color: #5c3d2e; color: #fff;">Image</th>
                                <th style="background-color: #5c3d2e; color: #fff;">Title</th>
                                <th style="background-color: #5c3d2e; color: #fff;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/uploads/aboutbanner/@item.Img" alt="about banner" class="img-thumbnail" style="max-width: 120px; border-radius: 8px;" />
                                    </td>
                                    <td>@item.Title</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-area="Admin" asp-controller="AboutBanner" asp-action="Detail" asp-route-id="@item.Id" title="View Details" class="btn btn-info btn-sm">
                                                <i class="fa-solid fa-circle-info"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="AboutBanner" asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-dark btn-sm">
                                                <i class="fa-solid fa-pencil"></i>
                                            </a>
                                            <button type="button"
                                                    class="btn btn-danger btn-sm delete-btn"
                                                    data-id="@item.Id">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div id="noBannerAlert" class="alert alert-warning text-center mt-4" role="alert" style="display:@(Model.Any() ? "none" : "block")">
                    No about banners have been added yet.
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteButtons = document.querySelectorAll(".delete-btn");

        deleteButtons.forEach(btn => {
            btn.addEventListener("click", function () {
                const id = this.getAttribute("data-id");
                const row = this.closest("tr");
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const addNewBannerLink = document.getElementById("addNewBannerLink");
                const noBannerAlert = document.getElementById("noBannerAlert");

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/Admin/AboutBanner/Delete/${id}`, {
                            method: "POST",
                            headers: {
                                'RequestVerificationToken': token,
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            body: ""
                        })
                        .then(async response => {
                            if (response.ok) {
                                row.remove();
                                Swal.fire("Deleted!", "Your banner has been deleted.", "success");

                                const tableBody = document.querySelector("#bannerTable tbody");
                                if (tableBody.children.length === 0) {
                                    noBannerAlert.style.display = "block";
                                    addNewBannerLink.style.display = "inline-block";
                                }
                            } else {
                                const errorText = await response.text();
                                console.error("Delete failed:", errorText);
                                Swal.fire("Error!", "Something went wrong.", "error");
                            }
                        })
                        .catch(error => {
                            console.error("Unexpected error:", error);
                            Swal.fire("Error!", "Unexpected error occurred.", "error");
                        });
                    }
                });
            });
        });
    });
</script>
