@model ApproachVM

<section id="our-approach">
    <div class="our-approach">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="our-approach-content">
                        <div class="section-title">
                            <h3 class="wow fadeInUp">@Model.Title</h3>
                            <h2 class="text-anime-style-3" data-cursor="-opaque">
                                @Model.SubTitle
                            </h2>
                        </div>
                        <div class="mission-vision-list">
                            @{
                                var itemsToShow = Model.Items?.TakeLast(3).ToList() ?? new List<ApproachItemVM>();
                                int delay = 2;
                            }

                            @foreach (var item in itemsToShow)
                            {
                                <div class="mission-vision-item wow fadeInUp" data-wow-delay="@($"0.{delay}s")">
                                    <div class="icon-box">
                                        <img src="~/uploads/approachicons/@item.IconImg" alt="@item.Title">
                                    </div>
                                    <div class="mission-vision-content">
                                        <h3>@item.Title</h3>
                                        <p>@item.Description</p>
                                    </div>
                                </div>
                                delay += 2;
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div style="opacity: 0.5 !important;" class="our-approach-image">
                        <figure class="image-anime">
                            <img src="~/@Model.Image" alt="">
                        </figure>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
