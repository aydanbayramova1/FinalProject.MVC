@using FinalProjectMvc.ViewModels.Admin.Menu
@model MenuVM


<section id="menu">
    <div class="menu-container">
        <div style="margin-top: 56px;" class="filter-controls">
            <select id="categoryFilter" class="category-filter">
                <option value="all">ALL CATEGORIES</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Name">@category.Name.ToUpper()</option>
                }
            </select>

            <select id="priceSort" class="price-sort">
                <option value="default">SORT BY</option>
                <option value="price-low">PRICE: LOW TO HIGH</option>
                <option value="price-high">PRICE: HIGH TO LOW</option>
                <option value="name-az">NAME: A TO Z</option>
                <option value="name-za">NAME: Z TO A</option>
            </select>
        </div>

        @foreach (var category in Model.Categories)
        {
            <section class="menu-section" data-category="hot-coffees">
                <div class="section-header">
                    <div class="brand-script">CAFFE LUNA </div>
                    <h2 class="section-title" style="font-family: 'Playfair Display', serif;">OUR @category.Name.ToUpper()</h2>
                </div>
                <div class="menu-layout">
                    <div class="menu-image left" style="margin-top: -25px;">
                        <img src="~/uploads/category/@category.Image" alt="Signature Coffee" style="width: 630px; height: 1140px; object-fit: cover;opacity: 0.5;transition: all 0.9s ease;">
                    </div>
                    @foreach (var product in Model.MenuProductVMs)
                    {
                        <div class="menu-items right">
                            <div class="menu-item" data-base-price="4.50" data-name="signature espresso">
                                <div class="item-info">
                                    <h3 class="item-name">@product.Name</h3>
                                    <p class="item-description">@product.Ingredients</p>
                                    @foreach (var item in Model.SizeVMs)
                                    {
                                        <div class="size-options">
                                            <button class="size-btn active" data-price="4.50">@item.Name</button>
                                            <button class="size-btn" data-price="5.50">@item.Name</button>
                                            <button class="size-btn" data-price="6.50">@item.Name</button>
                                        </div>
                                    }
                                   
                                </div>
                                <div class="item-price">$@product.Price</div>
                            </div>

                        
                        </div>
                    }

                  
                </div>
            </section>

            
        }
      



    </div>
</section>