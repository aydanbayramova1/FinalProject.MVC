@model IEnumerable<SliderVM>

@if (Model != null && Model.Any())
{
    <section id="slider">
        <div class="hero hero-slider-layout">
            <div class="swiper">
                <div class="swiper-wrapper">
                    @foreach (var item in Model)
                    {
                        <div class="swiper-slide">
                            <div class="hero-slide slide-1"
                                 style="background: url('/uploads/sliders/@item.Img') center center/cover no-repeat;">
                                <div class="container">
                                    <div class="row align-items-center">
                                        <div class="col-lg-8 col-md-10">
                                            <div class="hero-content">
                                                <div class="section-title">
                                                    <h3>@item.Subtitle</h3>
                                                    <h1>@item.Title</h1>
                                                    <p>@item.Description</p>
                                                </div>
                                                <div class="hero-btn">
                                                    <a href="/About" class="btn-default">Discover coffee</a>
                                                    <a href="/Reservation" class="btn-default btn-highlighted">
                                                        Book a table
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
}
else
{
    <p>No slider data available.</p>
}
