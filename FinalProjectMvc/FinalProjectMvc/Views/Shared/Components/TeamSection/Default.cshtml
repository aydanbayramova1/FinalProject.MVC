@model List<TeamMemberVM>

<section id="team-section">
    <div class="page-team">
        <div class="container">
            <h2 class="section-title" style="margin-top: 4pc;">Core Team</h2>
            <div class="row" style="margin-top: 6pc;">

                @foreach (var member in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="team-item wow fadeInUp">
                            <div class="team-image"
                                 style="box-shadow: rgba(50, 50, 93, 0.25) 0px 30px 60px -12px inset, rgba(0, 0, 0, 0.3) 0px 18px 36px -18px inset !important;">
                                <figure class="image-anime">
                                    <img src="~/uploads/team/@member.ImgUrl" alt="@member.FullName" />
                                </figure>
                            </div>
                            <div class="team-body" style="transition: all 0.5s ease;">
                                <div class="team-social-icon">
                                    <p style=" color: white;">
                                        @member.Desc
                                    </p>
                                </div>
                                <div class="team-content">
                                    <h3>@member.FullName</h3>
                                    <p style="color: #C9A581;">@member.Position</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
