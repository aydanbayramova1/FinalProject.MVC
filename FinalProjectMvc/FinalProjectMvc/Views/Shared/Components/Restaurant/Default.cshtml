@model AboutRestaurantVM

<section id="about-restaurant">
    <div class="about-restaurant light-bg-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 order-lg-1 order-md-1">
                    <div class="about-restaurant-content">
                        <div class="section-title">
                            <h3 class="wow fadeInUp">About Coffee Luna</h3>
                            <h2 class="text-anime-style-3" data-cursor="-opaque">@Model.Title</h2>
                        </div>
                        <div class="about-restaurant-info">
                            <h3 class="wow fadeInUp" data-wow-delay="0.2s">@Model.ExperienceDescription</h3>
                            <p class="wow fadeInUp" data-wow-delay="0.4s">@Model.QualityMessage</p>
                            <p class="wow fadeInUp" data-wow-delay="0.6s">@Model.AtmosphereNote</p>
                        </div>
                        <div class="about-author-box wow fadeInUp" data-wow-delay="0.8s">
                            <h3>@Model.HeadBaristaName – Head Barista</h3>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 order-lg-2 order-md-3">
                    <div class="about-restaurant-image">
                        <figure class="image-anime">
                            <img src="~/img/@Model.Image" alt="About Image" style="opacity:0.5; max-width: 100%;" />
                        </figure>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 order-lg-3 order-md-2">
                    <div class="restaurant-timing-box">
                        <div class="section-title">
                            <h3 class="wow fadeInUp">@Model.TimingTitle</h3>
                            <h2 class="text-anime-style-3" data-cursor="-opaque">@Model.TimingSubtitle</h2>
                        </div>
                        <div class="restaurant-time-body">
                            <h3 class="wow fadeInUp" data-wow-delay="0.2s">@Model.TimingDescription</h3>
                            <ul class="wow fadeInUp" data-wow-delay="0.4s">
                                <li>Monday to Friday: @Model.WeekdayTime</li>
                                <li>Weekend: @Model.WeekendTime</li>
                                <li>Happy Hour: @Model.HappyHour</li>
                                <li>Holidays: @Model.HolidayStatus</li>
                            </ul>
                            <h3 class="wow fadeInUp" data-wow-delay="0.6s">@Model.HolidayNote</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
