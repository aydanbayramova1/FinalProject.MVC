@model FinalProjectMvc.Models.IntroVideo

@if (Model == null || Model.Counters == null || !Model.Counters.Any())
{
    return;
}

<section id="intro-video">
    <div class="intro-video parallaxie"
         style="background-image: url('@Url.Content($"~/uploads/images/{Model.Img}")'); background-size: cover; background-position: center center; background-repeat: no-repeat;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-8">
                    <div class="intro-video-content">
                        <div class="section-title">
                            <h3 class="wow fadeInUp">@Model.Title</h3>
                            <h2 class="text-anime-style-3" data-cursor="-opaque">
                                @Model.Subtitle
                            </h2>
             
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-4">
                    <div class="intro-video-box about-intro-video wow fadeInUp" data-wow-delay="0.2s">
                        <div class="video-play-button">
                            <a href="~/uploads/videos/@Model.VideoUrl" class="popup-video">
                                <i class="fas fa-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-video-counters">
                        @foreach (var counter in Model.Counters.OrderByDescending(c => c.Id).Take(4))
                        {
                            <div class="video-counter-item">
                                <div class="icon-box">
                                    <img src="~/@counter.IconPath" alt="">
                                </div>
                                <div class="video-counter-content">
                                    <h2><span class="counter">@counter.Count</span>@counter.Suffix</h2>
                                    <p>@counter.Description</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
