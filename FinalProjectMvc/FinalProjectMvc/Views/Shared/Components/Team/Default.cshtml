@model List<TeamMemberVM>

<section id="team">
    <div class="our-team" style="margin-top: -7pc;">
        <div class="container">
            <div class="row section-row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">our team</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">
                            Experts brewing excellence every day
                        </h2>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (var member in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="team-item wow fadeInUp">
                            <div class="team-image" style="opacity: 0.5 !important;">
                                <figure class="image-anime">
                                    <img src="~/uploads/team/@member.ImgUrl" alt="@member.FullName">
                                </figure>
                            </div>
                            <div class="team-body">
                                <div class="team-social-icon" style="font-weight: 300; display: block;">
                                    <p>@member.Desc</p>
                                </div>
                                <div class="team-content">
                                    <h3>@member.FullName</h3>
                                    <p style="color: #C9A581;">@member.Position</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
