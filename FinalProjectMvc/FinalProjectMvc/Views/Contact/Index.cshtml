    <!-- Page Contact Us Start -->
    <section id="contact">
        <div class="page-contact-us">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="contact-information">
                            <div class="section-title">
                                <h3 class="wow fadeInUp">contact us</h3>
                                <h2 class="text-anime-style-3" data-cursor="-opaque">Get in touch with us</h2>
                                <p class="wow fadeInUp" data-wow-delay="0.2s">
                                    Whether you have questions, need
                                    support, or want to discuss a coffe shopu, feel free to reach out.
                                </p>
                            </div>

                            <div class="contact-info-body">
                                <div class="contact-info-box-1 wow fadeInUp" data-wow-delay="0.4s">
                                    <div class="contact-info-item">
                                        <div class="icon-box">
                                            <img src="~/assets/images/common/icon-phone-accent.svg" alt="">
                                        </div>
                                        <div class="contact-item-content">
                                            <h3>phone number</h3>
                                            <p>T. <a href="https://wa.me/994513153684" target="_blank">+994 51 315 36 84</a></p>
                                        </div>
                                    </div>

                                    <div class="contact-info-item">
                                        <div class="icon-box">
                                            <img src="~/assets/images/common/icon-mail-accent.svg" alt="">
                                        </div>
                                        <div class="contact-item-content">
                                            <h3>email address</h3>
                                            <p><a href="mailto:caffeluna67@gmail.com">caffeluna67@gmail.com</a></p>
                                        </div>
                                    </div>
                                </div>

                                <div class="contact-info-box-2 wow fadeInUp" data-wow-delay="0.6s">
                                    <div class="contact-info-item">
                                        <div class="icon-box">
                                            <img src="~/assets/images/common/icon-location-accent.svg" alt="">
                                        </div>
                                        <div class="contact-item-content">
                                            <h3>Address</h3>
                                            <p>Marchesi 1824 Via Montenapoleone 9, 20121 Milano Lombardia, Italy</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="contact-us-form">
                            <div class="contact-form-content">
                                <h3 class="wow fadeInUp">send a message</h3>
                                <p class="wow fadeInUp" data-wow-delay="0.2s">
                                    Unlock your potential with expert
                                    guidance! Schedule a free consultation toward personal and business success.
                                </p>
                            </div>

                            <div class="contact-form">
                                <form id="contactForm" action="#" method="POST" data-toggle="validator"
                                      class="wow fadeInUp" data-wow-delay="0.4s">
                                    <div class="row">
                                        <div class="form-group col-md-6 mb-5">
                                            <input type="text" name="fname" class="form-control" id="fname"
                                                   placeholder="First Name" required>
                                            <div class="help-block with-errors"></div>
                                        </div>

                                        <div class="form-group col-md-6 mb-5">
                                            <input type="text" name="lname" class="form-control" id="lname"
                                                   placeholder="Last Name" required>
                                            <div class="help-block with-errors"></div>
                                        </div>

                                        <div class="form-group col-md-6 mb-5">
                                            <input type="email" name="email" class="form-control" id="email"
                                                   placeholder="E-mail Address" required>
                                            <div class="help-block with-errors"></div>
                                        </div>

                                        <div class="form-group col-md-6 mb-5">
                                            <input type="text" name="phone" class="form-control" id="phone"
                                                   placeholder="Phone Number" required>
                                            <div class="help-block with-errors"></div>
                                        </div>

                                        <div class="form-group col-md-12 mb-5">
                                            <textarea name="message" class="form-control" id="message" rows="3"
                                                      placeholder="Message"></textarea>
                                            <div class="help-block with-errors"></div>
                                        </div>

                                        <div class="col-lg-12">
                                            <div class="contact-form-btn">
                                                <button type="submit" class="btn-default" id="submitBtn">
                                                    <span id="submitText">submit message</span>
                                                </button>
                                                <div id="msgSubmit" class="success-message">
                                                    Your message has been sent successfully! We'll get back to you soon.
                                                </div>
                                                <div id="msgError" class="error-message">
                                                    Sorry, there was an error sending your message. Please try again.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Contact Us End -->
    <!-- Google Map Section Start -->
    <section id="google-map-section">
        <div class="google-map">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
