<div class="main-content">
    <div class="form-section">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Reservation Form</h2>
            </div>

            <form asp-action="Create" method="post" id="reservationForm">
                <div class="form-group">
                    <label asp-for="FullName" class="label"></label>
                    <input asp-for="FullName" class="input" placeholder="Enter your name" />
                    <span asp-validation-for="FullName" class="error-msg"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="label"></label>
                    <input asp-for="Email" class="input" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="error-msg"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="label"></label>
                    <input asp-for="PhoneNumber" class="input" placeholder="+994 XX XXX XX XX" />
                    <span asp-validation-for="PhoneNumber" class="error-msg"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Date" class="label"></label>
                        <input asp-for="Date" type="date" class="input" />
                        <span asp-validation-for="Date" class="error-msg"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Time" class="label"></label>
                        <input asp-for="Time" type="time" class="input" />
                        <span asp-validation-for="Time" class="error-msg"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="GuestCount" class="label"></label>
                    <input asp-for="GuestCount" type="number" class="input" min="1" max="15" />
                    <span asp-validation-for="GuestCount" class="error-msg"></span>
                </div>

                <div class="form-group">
                    <label class="label">Select Table *</label>
                    <select asp-for="TableId" class="input">
                        <option value="">Select table...</option>
                        @* fill this dynamically via AJAX or controller ViewBag *@
                    </select>
                    <span asp-validation-for="TableId" class="error-msg"></span>
                </div>

                @* --- Add to Cart Button --- *@
                <button type="button" id="toggleMenu" class="btn btn-primary" disabled>
                    Select Menu Items
                </button>

                @* Cart will be dynamically inserted using JS *@
                <div id="cartDisplay" style="display:none">
                    <div id="cartItems"></div>
                    <input type="hidden" name="CartItems" />
                </div>

                <button type="submit" class="btn btn-success" id="submitBtn" disabled>
                    Complete Reservation
                </button>
            </form>

        </div>
