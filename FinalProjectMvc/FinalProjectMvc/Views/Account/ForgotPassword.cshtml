@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coffee Shop - Şifremi Unuttum</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700" rel="stylesheet">
    <script src="https://kit.fontawesome.com/897e067933.js" crossorigin="anonymous"></script>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: "Nunito", sans-serif;
            margin: 0;
        }

        .container {
            height: 100vh;
            background-image: url('/placeholder.svg?height=800&width=1200');
            background-size: 100%;
            background-position: center;
            background-repeat: no-repeat;
        }

        .modal {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            background: rgba(51, 51, 51, 0.85);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .modal-container {
            display: flex;
            max-width: 720px;
            width: 100%;
            border-radius: 10px;
            overflow: hidden;
            background: #fff;
            opacity: 1;
            pointer-events: auto;
            transform: translateY(0) scale(1);
        }

        .modal-left {
            padding: 60px 30px 20px;
            background: #fff;
            flex: 1.5;
            opacity: 1;
            transform: translateY(0);
        }

        .modal-right {
            flex: 2;
            font-size: 0;
            overflow: hidden;
            display: block;
        }

        .modal-right img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transform: scale(1);
        }

        .modal-title {
            font-size: 26px;
            margin: 0;
            font-weight: 400;
            color: #55311c;
        }

        .modal-desc {
            margin: 6px 0 30px 0;
        }

        .input-block {
            display: flex;
            flex-direction: column;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 20px;
            position: relative;
        }

        .input-block input {
            border: none;
            outline: none;
            font-size: 14px;
        }

        .input-label {
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            color: #8c7569;
            margin-bottom: 5px;
        }

        .input-button {
            padding: 10px 20px;
            background: #8c7569;
            border: none;
            border-radius: 4px;
            color: #fff;
            cursor: pointer;
            transition: 0.3s;
            margin-right: 10px;
        }

        .input-button:hover {
            background: #55311c;
        }

        .input-button.secondary {
            background: #ddd;
            color: #333;
        }

        .input-button.secondary:hover {
            background: #ccc;
        }

        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .success-message {
            background-color: #d4edda;
            color: #155724;
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
            display: none;
        }

        .error-message {
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
            display: none;
        }

        .scroll-down {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 20px;
            color: white;
            font-weight: 500;
            display: flex;
            flex-direction: column;
            align-items: center;
            z-index: -1;
        }

        media(max-width: 750px) {
            .modal-container {
                flex-direction: column;
                width: 90%;
            }
            .modal-right {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="scroll-down">
        EVERY DAY THAT STARTS WITH COFFEE IS A BEAUTIFUL DAY
    </div>
    
    <div class="container"></div>

    <div class="modal">
        <div class="modal-container">
            <div class="modal-left">
                <h1 class="modal-title">I forgot my password Don't worry! </h1>
                <p class="modal-desc">Enter your email address and we'll send you a reset link.
                    .</p>

                <div class="success-message" id="successMessage">
                  
                             Reset link sent successfully! Please check your email.
                </div>

                <div class="error-message" id="errorMessage">
                    Please enter a valid email address.
                </div>

                <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                    <div class="input-block">
                        <label asp-for="Email" class="input-label">
                            Email Address</label>
                        <input type="email" id="resetEmail" asp-for="Email" placeholder="E-posta adresinizi girin" required />
                    </div>

                    <div class="button-group">
                        <button type="submit" class="input-button">Send Reset Link</button>
                        <button type="button" class="input-button secondary" onclick="window.location.href='login.html'">
                            Girişe Dön
                        </button>
                    </div>
                </form>
            </div>

            <div class="modal-right">
                <img src="assets/images/common/coffeshop.jpg" alt="Kahve dükkanı">
            </div>
        </div>
    </div>

    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const email = document.getElementById('resetEmail').value;
            const successMessage = document.getElementById('successMessage');
            const errorMessage = document.getElementById('errorMessage');
            
            successMessage.style.display = 'none';
            errorMessage.style.display = 'none';
            
            if (!email) {
                errorMessage.textContent = 'Lütfen e-posta adresinizi girin.';
                errorMessage.style.display = 'block';
                return;
            }

            const emailRegex = /^[^\s]+[^\s]+\.[^\s]+$/;
            if (!emailRegex.test(email)) {
                errorMessage.textContent = 'Lütfen geçerli bir e-posta adresi girin.';
                errorMessage.style.display = 'block';
                return;
            }

            successMessage.style.display = 'block';
            
            setTimeout(() => {
                window.location.href = 'reset-password.html';
            }, 3000);
        });
    </script>
</body>
</html>