@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}





<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coffee Shop - Şifre Sıfırla</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700" rel="stylesheet">
    <script src="https://kit.fontawesome.com/897e067933.js" crossorigin="anonymous"></script>
    <style>9
        * {
            box-sizing: border-box;
        }

        body {
            font-family: "Nunito", sans-serif;
            margin: 0;
        }

        .container {
            height: 100vh;
            background-image: url('/placeholder.svg?height=800&width=1200');
            background-size: 100%;
            background-position: center;
            background-repeat: no-repeat;
        }

        .modal {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            background: rgba(51, 51, 51, 0.85);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .modal-container {
            display: flex;
            max-width: 720px;
            width: 100%;
            border-radius: 10px;
            overflow: hidden;
            background: #fff;
            opacity: 1;
            pointer-events: auto;
            transform: translateY(0) scale(1);
        }

        .modal-left {
            padding: 60px 30px 20px;
            background: #fff;
            flex: 1.5;
            opacity: 1;
            transform: translateY(0);
        }

        .modal-right {
            flex: 2;
            font-size: 0;
            overflow: hidden;
            display: block;
        }

            .modal-right img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transform: scale(1);
            }

        .modal-title {
            font-size: 26px;
            margin: 0;
            font-weight: 400;
            color: #55311c;
        }

        .modal-desc {
            margin: 6px 0 30px 0;
        }

        .input-block {
            display: flex;
            flex-direction: column;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 20px;
            position: relative;
        }

            .input-block input {
                border: none;
                outline: none;
                font-size: 14px;
                padding-right: 40px;
            }

        .input-label {
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            color: #8c7569;
            margin-bottom: 5px;
        }

        .input-button {
            padding: 10px 20px;
            background: #8c7569;
            border: none;
            border-radius: 4px;
            color: #fff;
            cursor: pointer;
            transition: 0.3s;
            margin-right: 10px;
        }

            .input-button:hover {
                background: #55311c;
            }

            .input-button.secondary {
                background: #ddd;
                color: #333;
            }

                .input-button.secondary:hover {
                    background: #ccc;
                }

        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .toggle-password {
            position: absolute;
            top: 50%;
            right: 12px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #8c7569;
            font-size: 16px;
        }

        .success-message {
            background-color: #d4edda;
            color: #155724;
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
            display: none;
        }

        .error-message {
            background-color: #f8d7da;
            color: #721c24;
            padding: 10px;
            border-radius: 4px;
            margin-top: 5px;
            font-size: 12px;
            display: none;
        }

        .scroll-down {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 20px;
            color: white;
            font-weight: 500;
            display: flex;
            flex-direction: column;
            align-items: center;
            z-index: -1;
        }

        media(max - width: 750px)

        {
            .modal-container

        {
            flex-direction: column;
            width: 90%;
        }

        .modal-right {
            display: none;
        }

        }
    </style>
</head>
<body>
    <div class="scroll-down">
        EVERY DAY THAT STARTS WITH COFFEE IS A BEAUTIFUL DAY
    </div>

    <div class="container"></div>

    <div class="modal">
        <div class="modal-container">
            <div class="modal-left">
                <h1 class="modal-title">Create New Password</h1>
                <p class="modal-desc">Please enter your new password below.</p>

                <div class="success-message" id="passwordResetSuccess">
                    Password has been successfully reset! You can now log in with your new password.
                </div>

                <form method="post" asp-controller="Account" asp-action="ResetPassword">
                    <div class="input-block">
                        <label asp-for="Password"  class="input-label">New Password</label>
                        <input asp-for="Password"  type="password" id="newPassword" placeholder="Enter your new password" required>
                        <span class="toggle-password" id="toggleNewPassword">
                            <i class="fas fa-eye"></i>
                        </span>
                    </div>

                    <div class="input-block">
                        <label asp-for="ConfirmPassword" class="input-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" id="confirmPassword" placeholder="Re-enter your password" required>
                        <span class="toggle-password" id="toggleConfirmPassword">
                            <i class="fas fa-eye"></i>
                        </span>
                        <div class="error-message" id="passwordError">Passwords do not match!</div>
                    </div>

                    <input type="hidden" asp-for="Token" value="@Model.Token" /> 
                    <input type="hidden" asp-for="UserId" value="@Model.UserId" />

                    <div class="button-group">
                        <button type="submit" class="input-button">Reset Password</button>
                        <button type="button" class="input-button secondary" onclick="window.location.href='login.html'">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>

            <div class="modal-right">
                <img src="assets/images/common/coffeshop.jpg" alt="Coffee shop">
            </div>
        </div>
    </div>

    <script>
        const toggleNewPassword = document.getElementById('toggleNewPassword');
        const newPasswordInput = document.getElementById('newPassword');
        const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
        const confirmPasswordInput = document.getElementById('confirmPassword');

        function togglePasswordVisibility(inputField, toggleIcon) {
            const type = inputField.getAttribute('type') === 'password' ? 'text' : 'password';
            inputField.setAttribute('type', type);
            toggleIcon.innerHTML = type === 'password'
                ? '<i class="fas fa-eye"></i>'
                : '<i class="fas fa-eye-slash"></i>';
        }

        toggleNewPassword.addEventListener('click', () => {
            togglePasswordVisibility(newPasswordInput, toggleNewPassword);
        });

        toggleConfirmPassword.addEventListener('click', () => {
            togglePasswordVisibility(confirmPasswordInput, toggleConfirmPassword);
        });

        document.getElementById('resetPasswordForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const newPassword = newPasswordInput.value;
            const confirmPassword = confirmPasswordInput.value;
            const passwordError = document.getElementById('passwordError');
            const passwordResetSuccess = document.getElementById('passwordResetSuccess');

            passwordError.style.display = 'none';
            passwordResetSuccess.style.display = 'none';

            if (!newPassword || !confirmPassword) {
                passwordError.textContent = 'Lütfen her iki şifre alanını da doldurun.';
                passwordError.style.display = 'block';
                return;
            }

            if (newPassword.length < 6) {
                passwordError.textContent = 'Şifre en az 6 karakter olmalıdır.';
                passwordError.style.display = 'block';
                return;
            }

            if (newPassword !== confirmPassword) {
                passwordError.textContent = 'Şifreler eşleşmiyor!';
                passwordError.style.display = 'block';
                return;
            }

            passwordResetSuccess.style.display = 'block';
            newPasswordInput.value = '';
            confirmPasswordInput.value = '';

            setTimeout(() => {
                window.location.href = 'login.html';
            }, 3000);
        });
    </script>
</body>
</html>




