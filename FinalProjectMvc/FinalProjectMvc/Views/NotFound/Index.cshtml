@{
    Layout = null;
    ViewData["Title"] = "Not Found Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- 404.css -->
    <link rel="stylesheet" href="~/assets/css/404/404.css" />
</head>
<body>

    <!--Main start-->
    <main>
      
        <!-- error section start -->
        <section id="error-404">
            <div class="error-page">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="error-page-image">
                                <img src="~/assets/images/common/404.png" alt="">
                            </div>
                            <div class="error-page-content">
                                <div class="section-title">
                                    <h2 class="text-anime-style-3" data-cursor="-opaque">Oops! not found!</h2>
                                </div>
                                <div class="error-page-content-body">
                                    <p>
                                        We've searched far and wide but couldn't find your coffee fix.
                                        Let us brew a path to help you discover something delightful.
                                    </p>
                                    <a class="btn-default" href="/"><span>back to home</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- error section end -->
    </main>
    <!--Main end-->
    <!-- 404.js -->
    <script src="~/assets/js/404/404.js"></script>
</body>
</html>
